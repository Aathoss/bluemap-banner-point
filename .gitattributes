# Auto detect text files and perform LF normalization
* text=auto

# Java source files
*.java text eol=lf

# Maven files
pom.xml text eol=lf
*.xml text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Markdown files
*.md text eol=lf

# Shell scripts
*.sh text eol=lf

# Makefiles
Makefile text eol=lf

# Properties files
*.properties text eol=lf

# Git files
.gitattributes text eol=lf
.gitignore text eol=lf

# Documentation
*.txt text eol=lf
*.rst text eol=lf

# Binary files
*.jar binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Archive files
*.zip binary
*.tar.gz binary
*.rar binary
*.7z binary

# Executable files
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Log files
*.log text eol=lf

# Temporary files
*.tmp text eol=lf
*.temp text eol=lf
